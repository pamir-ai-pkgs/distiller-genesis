#!/bin/bash
set -e

# Post-removal script for distiller-genesis
# Meta-package - minimal post-removal tasks

case "$1" in
    purge|remove)
        echo "distiller-genesis meta-package removed"
        echo "Installed dependencies remain and can be removed independently"
        ;;

    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
